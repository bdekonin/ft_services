minikube start --vm=true --extra-config=apiserver.service-node-port-range=0-30000

--vm=true | voor addons enable ingress
--extra-config=apiserver.service-node-port-range=0-30000 | voor meer ports

minikube addons enable ingress
kubectl get pods -n kube-system // verify ingress is running
kubectl create deployment nginx --image=k8s.gcr.io/nginx
kubectl expose deployment nginx --type=NodePort --port=80
kubectl apply -f srcs/ingress.yaml
kubectl get ingress
minikube ip
minikube dashboard








